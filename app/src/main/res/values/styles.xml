<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="titleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">@dimen/horizontal_margin</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/title_size</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="detailButtonsStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/_5sdp</item>
        <item name="android:paddingHorizontal">@dimen/_10sdp</item>
        <item name="android:paddingVertical">@dimen/_5sdp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="detailButtonsTextsStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">@dimen/detail_button_text_size</item>
    </style>

</resources>